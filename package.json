{
  "name": "fcc-bookclub",
  "version": "1.0.0",
  "description": "book trading backend app as part of https://www.freecodecamp.com/challenges/manage-a-book-trading-club",
  "main": "server/index.js",
  "scripts": {
    "cloc": "cloc --by-file server",
    "server": "npm-run-all -s server-clean server-coffee -p servermon server-coffee-watch",
    "server-clean": "rm -rf server-dist/",
    "server-coffee": "coffee -ct --output server-dist/ server/",
    "server-coffee-watch": "coffee -ctw --output server-dist/ server/",
    "server-debug": "node --inspect-brk=9229 server-dist/index.js",
    "servermon": "nodemon --inspect-brk=9229 server-dist/index.js --watch server-dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server/index.js",
    "copy-libs": "cp ./app/to-copy/* ./dist/",
    "nstart": "nodemon server/index.js -w ./server",
    "pug": "pug -P ./app/index.pug -o ./dist/",
    "watch-pug": "pug -w ./app/index.pug -o ./dist/",
    "css": "stylus ./app/*.styl -o ./dist/",
    "watch-css": "stylus -w ./app/*.styl -o ./dist/",
    "browserify": "browserify ./app/index.js -o ./dist/bundle.js",
    "watch-browserify": "watchify ./app/index.js -o ./dist/bundle.js",
    "build": "npm-run-all --parallel copy-libs pug css browserify",
    "dev": "npm-run-all --parallel copy-libs watch-pug watch-css watch-browserify nstart",
    "deploy": "rsync -azP ./ --exclude='node_modules' root@blogjono.com:/root/projects/dynamic/fcc-b-bookclub"
  },
  "author": "Jonathan T L Lee",
  "repository": "https://github.com/Lee182/fcc-bookclub.git",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.16.0",
    "cookie-parser": "^1.4.3",
    "curl": "^0.1.4",
    "express": "^4.14.0",
    "fs-extra": "^4.0.2",
    "google-books-search": "^0.3.1",
    "lodash": "^4.17.4",
    "login-with-twitter": "^1.0.0",
    "mongodb": "^2.2.12",
    "uws": "^8.14.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-root-import": "^5.1.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-node8": "^1.2.0",
    "babel-project-relative-import": "^2.0.1",
    "browserify": "^14.4.0",
    "chokidar": "^1.7.0",
    "cloc": "^2.2.0",
    "coffeescript": "^2.0.1",
    "jscodeshift": "^0.3.32",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.0.0",
    "pug": "^2.0.0-beta6",
    "stylus": "^0.54.5",
    "watchify": "^3.7.0"
  }
}
