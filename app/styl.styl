@require './lib/jonoreset.styl'

// $font1 = 'Alegreya', serif
$font1 = 'PT Serif'
.row
  width 100%
  display flex
  justify-content space-between
  flex-flow row wrap
  &.line
    border-top 1px solid grey
    margin calc(.5rem - 1px) 0
    padding 0
.flex-center
  display flex
  justify-content center
  align-items center

.flex-gap
  flex-grow 1

.btn
  padding 0.5rem
  border-radius 0.3rem
  border 1px solid #908e8e

.btn-text
  text-decoration underline

.link
  border-bottom 1px solid gray


body
  background-image url('/bg.png')
  font-family $font1
#app
  background-color rgba(48, 11, 71, .3)
  height 100vh
  width 100%

.content
  display flex
  flex-flow row wrap
  justify-content space-between
  @media screen and (min-width: 600px)
    width calc(100% - 250px)
.data
  padding 2rem
  white-space pre-wrap
  font-family 'ubuntu mono', monospace
  font-size 1rem
  code
    display inline-block
    background #ddd
    color #444
    padding 1rem
    line-height 1.5

.gap
  padding 0 .5rem

@require 'modules/header.styl'


