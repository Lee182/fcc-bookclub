.account
  &-headshot
    height 150px
    width 150px
  &-map
    height 200px
    width 280px

.leaflet-control-attribution
  display none

h2
  font-size 1.3rem
  align-items baseline
.account-myloc
  padding 1rem 1rem 0 1rem

.account-box
  align-self flex-start
  background white
  margin 1rem 0
  @media screen and (min-width: 400px)
    margin 1rem

.account-layout
  justify-content center



.account-contact-box
  padding 1rem
  display none
.contcat-sub
  padding .5rem
  color lighten(black, 40%)
  font-style italic
  line-height 1.5
.account-contact
  display flex
  flex-flow row nowrap
  align-items flex-start
  padding .5rem
  .key
    flex 1
    padding-right 1rem
