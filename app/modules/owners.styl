.layout-owners
  width 100%
  max-width 600px
  margin 1rem auto
  background #fff
  overflow scroll

  h2
    padding 1rem 1rem .5rem 1rem
    font-size 1.5rem

  table
    width 600px
  th
    font-weight 600
    text-align center
    padding .5rem
  td
    padding .5rem
    text-align center
  .td-right
    text-align right
  .tr-awaiting
    background #e4e1ff
  .tr-declined
    background #ffb1b1
    opacity .5
  .tr-accepted
    background #9bff9b

  .td-loci
    width 200px
    line-height 1.4
    text-align left

.button-tradereq
  background #006864
  color white
  border-radius 1rem
  margin 0
  border none
