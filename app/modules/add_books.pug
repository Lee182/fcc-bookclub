.add_book
  h2 Add a book to trade
  .search
    input(
      placeholder='search by book title or isbn', v-model='add_book__search_input',
      v-on:keyup.enter='add_book__search')
    .serach-icon.flex-center
      i.fa.fa-search
  p.booklist-showing(v-if=`add_book__search_result !== ''`) showing results for "{{ add_book__search_result }}" at page {{ add_book__search_result_pagenum }} of {{ add_book__search_result_pages }}

  .booklist
    .book(v-for='book in add_book__books')
      .book-image
        img(:src='book.thumbnail')

      h3.booktxt
        a(:href='book.link' target='_blank').book-title {{book.title}}
      p.book-author.booktxt(v-if='book.authors') by {{ book.authors.join(', ') }}
      p.book-published.booktxt {{ book.publishedDate }}
      p.book-shortdescription.booktxt {{ book.subtitle }}
      .clear

  .flex-center
    //- add_book__search_result_pages
    //- add_book__search_result_pagenum
    .pgs(v-show='add_book__search_result_pagenum > 0')
      .pg.flex-center(
        v-for='(pg, i) in pagination(add_book__search_result_pagenum)',
        :class=`{active: pg === add_book__search_result_pagenum}`
      )
        div(
          v-if='i === 0',
          @click='add_book__change_page(pg)') <
        div(v-if='i === 4',
          @click='add_book__change_page(pg)') >
        div(v-if=`pg <= add_book__search_result_pages && i !== 0 && i !== 4`
          @click='add_book__change_page(pg)') {{ pg }}
