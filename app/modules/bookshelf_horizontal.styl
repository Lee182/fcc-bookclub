.bookshelf-box
  width 100%
  max-width 600px
  margin 1rem auto
  position relative
.android_h2
  padding 1rem
  h2
    align-self center

.bookshelf
  display flex
  &-horizontal
    flex-flow row nowrap
  &-vertical
    flex-flow row wrap
    justify-content center
  overflow-x scroll
  padding-bottom 1rem
  .book-thumb
    width 105px
  .book
    background white
    flex-shrink 0
    width 105px
    max-height 215px
    align-self flex-end
    margin .5rem
    overflow scroll
    position relative
  .book-title
    font-family futura
  .book-title
  .book-author
    padding .2rem


.button-more
  text-transform uppercase
  font-weight 600
  font-size .95rem
  color brown

.arrow-circle
  background rgba(189,178,178,0.302)


.book-icons
  top 0
  left 0
  position absolute

.book-icon
  width 1.5rem
  height 1.5rem
  color white
  border 2px solid white
  border-radius 50%

.book-icon-trade
  background #005f00

.book-icon-owner
  background brown
