$main_color = rgb(110, 36, 90)
.header
  background-color $main_color
  color #fff
  box-shadow 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
  &-titlerow
    align-items stretch
  &-title
  &-icon
    padding 1rem
  h1
    font-size 1.3rem
  &-icon
    i
      font-size 1.3rem
.nav
  display none
  &.show
    display flex
  position relative
  flex-flow row nowrap
  align-items stretch
  overflow-x scroll
  &-active
    position absolute
    bottom 0px
    transition all .4s ease
    left 0
    width 4.5rem
    padding 2px
    background white
  &-item
    padding 1rem
    // flex 1
    padding-top 1.25rem
    align-self stretch
    list-style none
    transition background-color .2s ease
    &:hover
      background-color #bdb2b24d
    // &.active
    //   color red
.nav-bottom .nav-item
  padding .5rem 1rem 1rem 1rem
