.layout-single_book
  width 100%
  max-width 600px
  margin 1rem auto
  padding 1rem
  background white

.layout-fullscreen
  width 100%
  height calc(100% - 3rem)

.sb-book
  button
    padding .5rem
    border 2px solid black
    margin .5rem
    border-radius .2rem
    text-transform capitalize
    &.fill-positive
      background #335733
      color white
      border 2px solid #335733
  &-thumb
    position relative
    float left
    padding-right 1rem
  &-title
    font-size 1.8rem
    padding-bottom .4rem
  &-author
    font-style italic
    font-size 1rem
    padding-bottom .5rem
  &-subtitle
    padding .5rem
    line-height 1.5
  &-description
    line-height 1.5
    b, strong
      font-weight 600
    ul, ol
      list-style unset
      margin-left 2rem
    li
      padding .5rem 0
    p
      padding 1rem 0
  &-isbn
    backrgound blue
    padding .5rem
