header
  .header-line.flex-center
    h1.header-title.flex-center
      i.fa.fa-bookmark-o
      | booktrade
    .flex-gap
    .header-bars.flex-center(@click='header_tog')
      i.fa.fa-bars
        .count.flex-center(v-show='header_count > 0') {{ header_count }}
  .header-rightpanel(:class='{header_open: header_open}')
    .header-rightpanel--color
      .rightpanel-item.user_id(v-if='user_id !== undefined')
        img.user_id-pic(
          v-bind:src=`'https://twitter.com/'+user_id+'/profile_image'`)
        .gap
        span.user_id-txt @{{ user_id }}
      .rightpanel-item.login(v-if='user_id === undefined' @click='login')
        span login with twitter
        .gap
        i.fa.fa-twitter
      .rightpanel-item.logout(
        @click='logout'
        v-if='user_id !== undefined')
          span logout
          .gap
          i.fa.fa-sign-out
