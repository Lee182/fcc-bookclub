include android_tabs.pug
header.header
  .header-titlerow.flex-row
    .header-title.flex-center: h1 #booktrade
    .flex-gap
    .flex-gap
    .header-icon.header-bell.flex-center(
      v-if='user_id !== undefined'
      ): .circle.flex-center
      //- notifications
      i.fa.fa-bell-o
    .header-icon.ellipsis-tog.flex-center(
      :class='{active: header.menu.open}'
      @click='header__elipsis_tog(header.menu)'
      v-if='user_id !== undefined'
      ): .circle.circle-avatar.flex-center
        img.header-avatar(:src=`'https://twitter.com/'+user_id+'/profile_image'`)
    .header-button-text.flex-center(
      v-if='user_id === undefined'
      ) login
  //- .nav-bottom(v-show='header.navInFirstRow === true')
  //-   +android_tabs('nav')

.ellipsis-fullscreen(
  :class='{show: header.menu.open, darkroom: header.menu.open}'
  @mousedown='ellipsis_clickaway($event, header.menu)'
  @touchstart='ellipsis_clickaway($event, header.menu)'
  )
  nav.ellipsis-menu
    li
      i.fa.fa-refresh
      span.gap-horizontal
      | refresh
    li
      i.fa.fa-cog
      span.gap-horizontal
      | settings
    li
      i.fa.fa-sign-out
      span.gap-horizontal
      | logout
