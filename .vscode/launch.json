{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/server.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "server:watch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "server:watch"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "server:dev",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "server:dev"
            ],
            "port": 9000
        }
    ],
    "compounds": [
        {
            "name": "FullStack",
            "configurations": ["server:watch", "server:dev"]
        }
    ]
}